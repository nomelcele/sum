		<put-attribute name="header" value="/WEB-INF/tiles/template/default/top.jsp"/>
		<put-attribute name="body" value="/WEB-INF/views/home/{1}.jsp"/>
		<put-attribute name="footer" value="/WEB-INF/tiles/template/default/footer.jsp"/>
	</definition>
	<definition name="*.*" template="/WEB-INF/tiles/template/default/templ.jsp">
		<put-attribute name="header" value="/WEB-INF/tiles/template/default/top.jsp"/>
		<put-attribute name="menu" value="/WEB-INF/tiles/template/default/contentLeft.jsp"/>
		<put-attribute name="body" value="/WEB-INF/views/{1}/{2}.jsp"/>
		<put-attribute name="footer" value="/WEB-INF/tiles/template/default/footer.jsp"/>
	</definition>
</tiles-definitions>
